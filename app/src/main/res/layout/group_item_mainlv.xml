<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/group_item_mainlv_iv"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/group_title_sample"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/group_item_mainlv_iv"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/group_item_mainlv_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="group trip"
            android:textStyle="bold"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/group_item_mainlv_tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="classmate go to trip at summer holidays"
            android:layout_marginTop="5dp"
            android:textSize="12sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/group_item_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_right_24"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>

</RelativeLayout>